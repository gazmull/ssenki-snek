{
  "compilerOptions": {
    "baseUrl": "./",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist",
    "paths": {
      "*": [
        "typings/*"
      ]
    },
    "removeComments": true,
    "target": "es2018",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
